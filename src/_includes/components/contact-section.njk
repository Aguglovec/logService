<div class="relative {{ sectionSettings.bg.color or 'bg-white' }}  " id="{{ section.data.eleventyNavigation.url }}">
    <div class="absolute inset-0 z-negative  bg-fixed bg-no-repeat bg-cover {{ sectionSettings.bg.imagePosition or 'bg-center' }} {{ sectionSettings.bg.opacityMobile or 'opacity-100' }} md:{{ sectionSettings.bg.opacityDesktop or sectionSettings.bg.opacityMobile or 'opacity-100' }}" style="background-image: url(/assets/images/{{ sectionSettings.bg.image }});"></div>

  <div class="relative mx-auto lg:grid lg:grid-cols-5 px-8 md:px-16 lg:px-32">
    <div class="px-4 py-4  sm:px-6 lg:col-span-3 ">
      <div class="max-w-lg ">
        <h2 class="text-3xl font-extrabold leading-8 tracking-tight {{sectionSettings.headingTextColor}} sm:text-3xl sm:leading-9">
          {{sectionSettings.headingText}}
        </h2>

        <dl class="mb-8 text-base leading-6 text-gray-500">
                    <div class="mt-6">
            <dt class="sr-only">Phone number</dt>
            <dd class="flex">
              <svg class="flex-shrink-0 w-6 h-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h2.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <span class="ml-3">
                <a class="hover:underline" href="tel:{{ meta.address.phoneCall }}">{{ meta.address.phoneDisplay }}</a>
              </span>
            </dd>
          </div>
          <div class="mt-3">
            <dt class="sr-only">Email</dt>
            <dd class="flex">
              <svg class="flex-shrink-0 w-6 h-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="ml-3">
                <a class="hover:underline" href="mailto:{{ meta.address.email }}">{{ meta.address.email }}</a>
              </span>
            </dd>
          </div>
        </dl>
      </div>
    </div>
    <div class="px-4 py-16 bg-white bg-opacity-30 sm:px-6 lg:col-span-2 lg:py-24 lg:px-8 xl:pl-12">
        <h2 class="text-3xl font-extrabold leading-8 tracking-tight {{sectionSettings.headingTextColor}} sm:text-3xl sm:leading-9 pb-8">
          Отправьте нам запрос
        </h2>
      <div class="max-w-lg mx-auto lg:max-w-none">
        <form name="contact" action="https://formsubmit.co/{{sectionSettings.formID or structure.g_formID}}" method="POST" data-netlify-recaptcha="true" data-netlify-honeypot="bot-field" data-netlify="true" class="grid grid-cols-1 row-gap-6">
          <p class="hidden">
            <label>Don’t fill this out if you're human: <input name="bot-field" /></label>
          </p>
          <div>
            <label for="full_name" class="sr-only">Имя</label>
            <div class="relative rounded-md shadow-sm">
              <input id="full_name" name="name" class="block w-full px-4 py-3 mb-6 placeholder-gray-500 transition duration-150 ease-in-out form-input" placeholder="Имя">
            </div>
          </div>
          <div>
            <label for="email" class="sr-only">Email</label>
            <div class="relative rounded-md shadow-sm">
              <input id="email" name="email" type="email" class="block w-full px-4 py-3 mb-6 placeholder-gray-500 transition duration-150 ease-in-out form-input" placeholder="Email">
            </div>
          </div>
          <div>
            <label for="phone" class="sr-only">Телефон</label>
            <div class="relative rounded-md shadow-sm">
              <input id="phone" name="phone" class="block w-full px-4 py-3 mb-6 placeholder-gray-500 transition duration-150 ease-in-out form-input" placeholder="Телефон">
            </div>
          </div>
          <div>
            <label for="message" class="sr-only">Сообщение</label>
            <div class="relative rounded-md shadow-sm">
              <textarea id="message" name="message" rows="4" class="block w-full px-4 py-3 mb-6 placeholder-gray-500 transition duration-150 ease-in-out form-input" placeholder="Сообщение"></textarea>
            </div>
          </div>
          <div data-netlify-recaptcha="true"></div>
          <div class="">
            <span class="inline-flex rounded-md shadow-sm">
              <button type="submit" class="py-4 px-6 my-4 rounded-lg {{ colors.buttonDefault.text or colors.buttonCustom.text }} hover:{{ colors.buttonDefault.textHover or colors.buttonCustom.textHover }} {{ colors.buttonDefault.bg or colors.buttonCustom.bg }} hover:{{ colors.buttonDefault.bgHover or colors.buttonCustom.bgHover }} {{ colors.buttonDefault.border or colors.buttonCustom.border }}">
                Отправить
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </div>
  </div>
</div>